{
  "prediction": {
    "days": 30,
    "trainSplit": 0.8
  },
  "training": {
    "incremental": true,
    "retrain": false,
    "minNewDataPoints": 50
  },
  "trading": {
    "buyThreshold": 0.05,
    "sellThreshold": -0.05,
    "minConfidence": 0.6
  },
  "api": {
    "timeout": 10000,
    "retries": 3,
    "rateLimit": 1000
  },
  "output": {
    "directory": "output",
    "template": "default",
    "includeCharts": true,
    "chartsType": "both"
  },
  "ml": {
    "modelType": "lstm",
    "windowSize": 30,
    "epochs": 50,
    "learningRate": 0.001,
    "batchSize": 32
  }
}
